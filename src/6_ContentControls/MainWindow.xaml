<Window x:Class="_6_ContentControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6_ContentControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button>
            <Button.ToolTip>
                <Image Source="funny_cat.jpg" Height="100"/>
            </Button.ToolTip>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0">Котяра</TextBlock>
                <Image Source="funny_cat.jpg" Height="100" Grid.Row="1"/>
                <TextBlock Grid.Row="2">В кнопці</TextBlock>
            </Grid>
        </Button>
    </StackPanel>
</Window>
